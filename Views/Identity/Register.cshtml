@model RegisterViewModel

<div class='d-md-flex justify-content-center p-3 m-3'>
    <form asp-action="Register" asp-controller='Identity' method="post">
        @Html.AntiForgeryToken()
        <div class='m-2'>
            <label asp-for="Email" class='form-label'>Email</label>
            <input asp-for="Email" class='form-control' placeholder="Email">
        </div>
        <div class='m-2'>
            <label asp-for="UserName" class='form-label'>UserName</label>
            <input asp-for="UserName" class='form-control' placeholder="User Name">
        </div>
        <div class='m-2'>
            <label asp-for="Password" class='form-label'>Password</label>
            <input asp-for="Password" class='form-control' placeholder="Password">
        </div>
        <div class='m-2'>
            <label asp-for="ConfirmPassword" class='form-label'>Confirm Password</label>
            <input asp-for="ConfirmPassword" class='form-control' placeholder="Confirm Password">
        </div>
        <div class='m-2'>
            <input type='submit' class='btn btn-primary' value="Register">
        </div>
    </form>
    <article>If you have account. You need <a asp-action="Login" asp-controller="Identity">LogIn</a> to your account</article>
</div>